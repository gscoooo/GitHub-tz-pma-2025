<?xml version="1.0" encoding="utf-8"?>
<!--
LinearLayout je jednoduchý a vhodný pro uspořádání prvků pod sebou.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ProfileFragment">

    <!-- ImageView pro zobrazení profilového obrázku -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Profilový obrázek"
        android:src="@android:drawable/ic_menu_camera" /> <!-- Výchozí ikona -->

    <!-- TextView pro zobrazení jména uživatele -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jméno neuvedeno"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginBottom="16dp" />

    <!-- TextView pro zobrazení náhodného šťastného čísla -->
    <TextView
        android:id="@+id/lucky_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tvé šťastné číslo: ?"
        android:layout_marginBottom="32dp" />

    <!-- Tlačítko pro přechod na obrazovku úprav -->
    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upravit profil" />

</LinearLayout>
