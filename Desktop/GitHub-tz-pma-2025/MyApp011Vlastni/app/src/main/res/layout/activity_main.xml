<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vyberte si pizzu:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/pizza_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/salami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salami" />

        <RadioButton
            android:id="@+id/hawai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hawai" />

        <RadioButton
            android:id="@+id/margherita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Margherita" />
    </RadioGroup>

    <ImageView
        android:id="@+id/pizza_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Extra přísady:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cheese_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra sýr" />

    <CheckBox
        android:id="@+id/olives_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oliva" />

    <Button
        android:id="@+id/order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Objednat" />

    <TextView
        android:id="@+id/summary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Souhrn objednávky:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Získej 10% slevu!" />

</LinearLayout>